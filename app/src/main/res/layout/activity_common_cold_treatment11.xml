<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-223dp"
            android:src="@drawable/gec_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="SR Gudlavalleru engineering college"
            android:textSize="22dp"
            android:fontFamily="@font/impact"
            android:layout_marginTop="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/treatmentsTitle"
            android:text="TREATMENT FOR COMMON COLD"
            android:layout_marginTop="156dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:textColor="@color/heading"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/table"
            android:layout_below="@+id/treatmentsTitle"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:background="@drawable/border"
                    android:text="FOR CHILDREN"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:padding="17dp"
                android:text="* Rest\n* Hydration\n* Salt water gargles\n* Warm water baths\n* Hot foods"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:id="@+id/foradults"
                    android:text="FOR ADULTS"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:padding="17dp"
                android:text="* Anti-histamines\n* Decongestants\n* Salt water gargle\n* Zinc lozenges\n* Lots of rest\n* NSAIDS\n* plenty of fluids."
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
        </TableLayout>

        <TextView
            android:id="@+id/disesase_medicines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/table"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/border"
            android:text="COMMONLY GIVEN MEDICINES ARE"
            android:textColor="@color/heading"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/medicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disesase_medicines"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/just_border"
            android:padding="4dp"
            android:text="* Analgesics- Ibuprofen,Paracetamol,aspirin.\n* Decongestant - diphenhydramine (BenadrylÂ®).\n* OTC medication"
            android:textColor="@color/contentcolor" />
        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="456dp"
            android:layout_below="@+id/medicines"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/tlGridTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="73dp"
                android:background="@drawable/just_border"
                android:padding="10dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/r11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="DRUG NAME"
                        android:layout_marginEnd="12dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/heading"
                        android:padding="12dp"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r12"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="12sp"
                        android:padding="12dp"
                        android:layout_height="wrap_content"

                        android:text="DRUG STRENGTH"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r13"
                        android:layout_width="wrap_content"
                        android:padding="12dp"
                        android:layout_height="wrap_content"

                        android:text="TYPE"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/lineborder"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/r31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=" 	Paracetamol IP 500mg +\n Phenylephrine HCL IP 5mg +\n Caffeine (anhydrous) IP 30mg +\n Diphenhydramine HCL IP 25mg tablet."
                        android:padding="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text=""
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="TABLET ,SYRUP"
                        android:textColor="@color/contentcolor" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/lineborder"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=" Pseudoephedrine hcl + Ibuprofen tablet"
                        android:padding="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/contentcolor" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"

                        android:text="Each tablet contains; \nibuprofen-200mg,400mg, \npseudoephedrine hcl-30mg,60mg."
                        android:textColor="@color/contentcolor" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="TABLET"
                        android:textColor="@color/contentcolor" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/lineborder"
                    android:layout_height="match_parent">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Isopropamide phenylpropanolamine Hcl."
                        android:padding="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/contentcolor" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"

                        android:text=""
                        android:textColor="@color/contentcolor" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="TABLET"
                        android:textColor="@color/contentcolor" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</ScrollView>