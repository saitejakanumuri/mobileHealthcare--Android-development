<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-223dp"
            android:src="@drawable/gec_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="SR Gudlavalleru engineering college"
            android:textSize="22dp"
            android:fontFamily="@font/impact"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/treatmentsTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156dp"
            android:fontFamily="monospace"
            android:text="TREATMENT FOR arthritis"
            android:textColor="@color/heading"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treatmentsTitle"
            android:layout_marginTop="19dp">

            <TableRow>

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:background="@drawable/border"
                    android:text="GENERAL TREATMENTS"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:id="@+id/general_treatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:background="@drawable/just_border"
                android:lineSpacingExtra="4dp"
                android:padding="13dp"
                android:text="* physical therapy
                        \n* occupational therapy
                        \n* nutrient-rich diet
                        \n* regular exercise
                        \n* weight loss, if needed
                        \n* heat and cold compresses
                        \n* mobility assistance devices, such as canes or walkers"
                android:textColor="@color/contentcolor"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:id="@+id/used_medicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:text="GENERAL MEDCINES"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>
        </TableLayout>
        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="456dp"
            android:layout_below="@+id/table"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="72dp"
            android:scrollbars="horizontal|vertical">

        <TableLayout
            android:id="@+id/tlGridTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table"
            android:layout_marginTop="12dp"
            android:background="@drawable/just_border"
            android:padding="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lineborder">

                <TextView
                    android:id="@+id/r11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="DRUG NAME"
                    android:layout_marginEnd="12dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/heading"
                    android:padding="12dp"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/r12"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:padding="12dp"
                    android:layout_height="wrap_content"

                    android:text="DRUG STRENGTH"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/heading"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/r13"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_height="wrap_content"

                    android:text="TYPE"
                    android:textColor="@color/heading"
                    android:textSize="23dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:background="@drawable/lineborder"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/r31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Nabumetone"
                    android:padding="12dp"
                    android:textAllCaps="true"
                    android:textColor="@color/contentcolor" />

                <TextView
                    android:id="@+id/r32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="12dp"
                    android:text="500g,750g "
                    android:textColor="@color/contentcolor" />

                <TextView
                    android:id="@+id/r33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="12dp"
                    android:text="TABLET"
                    android:textColor="@color/contentcolor" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:background="@drawable/lineborder"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Naproxen suspension"
                    android:padding="12dp"
                    android:textAllCaps="true"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"

                    android:text="5ml,125mg"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="12dp"
                    android:text="SYRUP,TABLET"
                    android:textColor="@color/contentcolor" />
            </TableRow>
            <TableRow
                android:background="@drawable/lineborder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" 	Dexibuprofen 200mg/300mg\n +Paracetamol 500mg tablet"
                    android:padding="12dp"
                    android:textAllCaps="true"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"

                    android:text=" 	Each tablet contains; \ndexibuprofen-200mg, 300mg,\n Paracetamol-500mg"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="12dp"
                    android:text="TABLET"
                    android:textColor="@color/contentcolor" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:background="@drawable/lineborder"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Celecoxib Mouth Dissolving Tablet 50/100/200 mg"
                    android:padding="12dp"
                    android:textAllCaps="true"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"

                    android:text="celecoxib-100/200mg/50mg"
                    android:textColor="@color/contentcolor" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="12dp"
                    android:text="TABLET"
                    android:textColor="@color/contentcolor" />
            </TableRow>

        </TableLayout>
        </HorizontalScrollView>/

    </RelativeLayout>
</ScrollView>