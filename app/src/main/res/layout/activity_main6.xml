<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    tools:context=".MainActivity6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Switch
            android:id="@+id/displayM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/another_border"
            android:text="TREATMENTS"
            android:textColor="#FFEB3B"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:layout_alignParentTop="true"
            android:contentDescription="gec_image"
            android:src="@drawable/gec_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:id="@+id/clg_name"
            android:textColor="#000000"
            android:background="@drawable/just_border"
            android:text="SR Gudlavalleru engineering college"
            android:textSize="22sp"
            android:fontFamily="@font/impact"
            android:layout_marginTop="110dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="monospace"
            android:id="@+id/content"
            android:layout_below="@+id/clg_name"
            android:background="@drawable/border"
            android:text="WHAT IS PSORIASIS?"
            android:textColor="#11209F"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/content"
            android:background="@drawable/just_border"
            android:fontFamily="monospace"
            android:id="@+id/drugtext"
            android:padding="7dp"
            android:text="Psoriasis is a chronic autoimmune condition that causes the rapid buildup of your skin cells. This buildup of cells causes scaling on your skinâ€™s surface.\n\n
Psoriasis is the result of a sped-up skin production process. Typically, skin cells grow deep in your skin and slowly rise to the surface. Eventually, they fall off.
"
            android:textColor="#FF0F1708" />

        <ImageView
            android:id="@+id/psoriasis_img"
            android:layout_width="255dp"
            android:layout_height="215dp"
            android:layout_below="@+id/drugtext"
            android:layout_marginStart="73dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/psoriasis" />
        <TextView
            android:id="@+id/drugquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/psoriasis_img"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="WHAT ARE causes of psoriasis?"
            android:textAllCaps="true"
            android:textColor="@color/heading"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/drugquestion"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="122dp"
            android:id="@+id/causes"
            android:background="@drawable/just_border"
            android:fontFamily="monospace"
            android:paddingStart="13dp"
            android:text="* Genetics\n* The immune system"
            android:textColor="#FF0F1708" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/causes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/symptons"
            android:background="@drawable/border"
            android:text="SYMPTOMS"
            android:textColor="@color/heading"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/symptons_matter"
            android:layout_below="@+id/symptons"
            android:layout_marginTop="10sp"
            android:background="@drawable/just_border"
            android:fontFamily="monospace"
            android:lineSpacingExtra="5dp"
            android:paddingStart="5dp"
            android:text="* raised, inflamed patches of skin that appear red on light skin and brown or purple on dark skin\n* whitish-silver scales or plaques on the red patches or gray scales on purple and brown patches\n* dry skin that may crack and bleed\n* soreness around patches\n *itching and burning sensations around patches\n* thick, pitted nails\n* painful, swollen joints."
            android:textColor="@color/contentcolor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/symptons_matter"
            android:background="@drawable/border"
            android:id="@+id/statistics_heading"
            android:fontFamily="monospace"
            android:text="statistics about psoriasis?"
            android:textAllCaps="true"
            android:textColor="@color/heading"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/statistics_matter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistics_heading"
            android:layout_marginTop="10dp"
            android:background="@drawable/just_border"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="22dp"
            android:padding="12dp"
            android:text="* Males and females are affected equally.\npeople with psoriasis are more likely to develop conditions such as:\n\n* type2 diabetes\n* kidney disease\n* heart disease\n* high blood pressure."
            android:textColor="@color/contentcolor" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lineborder"
            android:layout_marginBottom="73dp"
            android:layout_below="@+id/statistics_matter"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="73dp"
                android:background="@drawable/lineborder"
                android:layout_marginTop="10dp">

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="TYPES OF PSORIASIS"
                        android:textColor="@color/heading"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:text="PLACES \nAFFECTED"
                        android:textColor="@color/heading"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:text="COLOR"
                        android:textColor="@color/heading"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/h11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plaque psoriasis"
                        android:padding="12dp"

                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/h12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="elbows,knees\nscalp"
                        android:padding="12dp"

                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="12dp"

                        android:text="small pink/violet spots"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guttate psoriasis"
                        android:padding="12dp"

                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/h22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text=" torso, arms, and\n legs."
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text="pink/violet"

                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/h31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Pustular psoriasis"
                        android:textColor="@color/contentcolor"

                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/h32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text=" hands or feet"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:text="red or violet "
                        android:padding="12dp"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/h41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Inverse psoriasis"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/h42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text="armpits or breasts,\n in your groin,\n or around skinfolds \nin your genitals "
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text="red, shiny, inflamed skin"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/h51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Erythrodermic \npsoriasis"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/h52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text="large sections of\n your body at once."
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:padding="12dp"
                        android:text="sun burned"
                        android:textColor="@color/contentcolor"
                        android:textSize="18dp" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>








    </RelativeLayout>
</ScrollView>