<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-223dp"
            android:src="@drawable/gec_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="SR Gudlavalleru engineering college"
            android:textSize="22dp"
            android:fontFamily="@font/impact"
            android:layout_marginTop="110dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156dp"
            android:fontFamily="monospace"
            android:text="TREATMENTS FOR VERCOSE VEINS"
            android:textColor="@color/heading"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="199dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:background="@drawable/border"
                    android:text="COMPRESSION"
                    android:textColor="@color/contentcolor"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:text="Your doctor may advise you to wear special compression socks or stockings. These place enough pressure on your legs so that blood can flow more easily to your heart. They also decrease swelling."
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
            <TableRow>
                <TextView
                    android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tSURGERYS"
                    android:textColor="@color/heading"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:paddingBottom="8dp"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:textAllCaps="true"
                    android:background="@drawable/border"
                    android:text="sclerotherapy"
                    android:textColor="@color/contentcolor"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:paddingStart="9dp"
                android:text=" a liquid or foam chemical injection to block off a larger vein"
                android:textColor="@color/contentcolor"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:textAllCaps="true"
                    android:text="microsclerotherapy"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:paddingStart="5dp"
                android:text="using a liquid chemical injection to block off smaller veins"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:textAllCaps="true"
                    android:text="laser surgery,"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:paddingStart="5dp"
                android:text="using light energy to block off a vein"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:textAllCaps="true"
                    android:text="endovenous ablation therapy,"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:paddingStart="5dp"
                android:text="using heat and radiofrequency waves to block off a vein"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/border"
                    android:textAllCaps="true"
                    android:text="endoscopic vein surgery"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:paddingStart="5dp"
                android:text="using a small lighted scope inserted through a small incision to block off a vein"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
        </TableLayout>

    </RelativeLayout>
</ScrollView>