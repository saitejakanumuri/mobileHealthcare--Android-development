<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-223dp"
            android:src="@drawable/gec_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="SR Gudlavalleru engineering college"
            android:textSize="22dp"
            android:id="@+id/clg_name"
            android:fontFamily="@font/impact"
            android:layout_marginTop="110dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/clg_name"
            android:layout_margin="12dp"
            android:textColor="@color/heading"
            android:id="@+id/treatmentsTitle"
            android:background="@drawable/border"
            android:text="TREATMENTS FOR HEPATITIS A"
            android:textSize="21dp"
            android:layout_centerHorizontal="true"/>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treatmentsTitle"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/treatmentsTitle"
                android:text="HEPATITIS A VACCINE"
                android:textAlignment="center"
                android:textColor="@color/angelina"
                android:textSize="23dp" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:text="CHILDREN (0.5ml)"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/just_border"
                android:padding="12dp"
                android:text="Children need 2 doses of hepatitis A vaccine:\n\n* First dose: 12 through 23 months of age\n\n*
Second dose: at least 6 months after the first dose"
                android:textColor="@color/purple_700"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="INFANTS (1ml)"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/just_border"
                android:padding="12dp"
                android:text="* These children should still get 2 additional doses at the recommended ages for long-lasting protection."
                android:textColor="@color/purple_700"
                android:textSize="19dp" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="ADULTS"
                    android:textColor="@color/teal_700"
                    android:textSize="19dp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="52dp"
                android:background="@drawable/just_border"
                android:padding="12dp"
                android:text="* should get hepatitis A vaccine as soon as possible and within 2 weeks after exposure.\n\n*
should continue to take vaccine after 12months iteratively for protection."
                android:textColor="@color/purple_700"
                android:textSize="19dp" />
        </TableLayout>
        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="456dp"
            android:layout_below="@+id/table"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/tlGridTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="73dp"
                android:layout_below="@+id/table"
                android:layout_marginTop="6dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lineborder">

                    <TextView
                        android:id="@+id/r11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DRUG NAME"
                        android:layout_marginEnd="12dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/heading"
                        android:padding="12dp"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r12"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="12sp"
                        android:padding="12dp"
                        android:layout_height="wrap_content"

                        android:text="DRUG STRENGTH"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r13"
                        android:layout_width="wrap_content"
                        android:padding="12dp"
                        android:layout_height="wrap_content"

                        android:text="TYPE"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/lineborder"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/r31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=" 	Hepatitis A Vaccine"
                        android:padding="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Each 0.5ml dose contains; hepatitis A (GBM strain) virus-160 antigen unit. "
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="vaccine"
                        android:textColor="@color/contentcolor" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</ScrollView>