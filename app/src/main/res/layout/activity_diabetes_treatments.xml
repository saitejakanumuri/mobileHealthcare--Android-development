                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Acarbose (Precose) and miglitol (Glyset) 50mg/100mg"
                        android:textColor="@color/contentcolor"/>
                </TableRow>
                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Biguanides"

                        android:padding="12dp"
                        android:textColor="@color/contentcolor"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Reduce the amount of glucose your liver makes"
                        android:textColor="@color/contentcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Metformin (Glucophage) 500mg"
                        android:textColor="@color/contentcolor"/>
                </TableRow>
                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="DPP-4 inhibitors"

                        android:padding="12dp"
                        android:textColor="@color/contentcolor"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Improve your blood sugar without making it drop too low"
                        android:textColor="@color/contentcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Linagliptin (Tradjenta), saxagliptin (Onglyza), and sitagliptin (Januvia)"
                        android:textColor="@color/contentcolor"/>
                </TableRow>
                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Glucagon-like peptides"

                        android:padding="12dp"
                        android:textColor="@color/contentcolor"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text=" Change the way your body produces insulin"
                        android:textColor="@color/contentcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Dulaglutide (Trulicity), exenatide (Byetta), and liraglutide (Victoza)"
                        android:textColor="@color/contentcolor"/>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</ScrollView>