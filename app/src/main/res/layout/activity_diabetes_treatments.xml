                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Slow your bodyâ€™s breakdown of sugars and starchy foods"
                        android:textColor="@color/contentcolor"/>
