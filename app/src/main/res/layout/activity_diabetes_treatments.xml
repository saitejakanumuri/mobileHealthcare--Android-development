                        android:layout_height="wrap_content"

                        android:text="DRUG STRENGTH"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r13"
                        android:layout_width="wrap_content"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lineborder"
                        android:text="TYPE"
                        android:textColor="@color/heading"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/r31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insulin glargine inj."
                        android:padding="12dp"
                        android:textAllCaps="true"
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="Each vial/cartridge contains lantus insulin glargine soln for inj-100 IU/ml "
                        android:textColor="@color/contentcolor" />

                    <TextView
                        android:id="@+id/r33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="12dp"
                        android:text="injection"
                        android:textColor="@color/contentcolor" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalView"
            android:layout_margin="19dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:text="FOR TYPE 2 DIABETES"
            android:textColor="@color/heading"
            android:textSize="18dp" />
          <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
              android:layout_marginBottom="73dp"
            android:background="@drawable/just_border"
            android:layout_below="@+id/type2"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fillViewport="true">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="73dp"
                android:layout_height="wrap_content">
                <TableRow android:orientation="vertical"
                    android:background="@drawable/lineborder">
                    <TextView
